@model Employee

<div class="form-group">
    @Html.LabelFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "name" })
    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "email", @type = "email" })
    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Salary)
    @Html.TextBoxFor(m => m.Salary, new { @class = "form-control", @id = "salary", @type = "number" })
    @Html.ValidationMessageFor(m => m.Salary, null, new { @class = "text-danger" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Address)
    @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @id = "address", @rows = "3" })
    @Html.ValidationMessageFor(m => m.Address, null, new { @class = "text-danger" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Gender)
    @Html.EnumDropDownListFor(m => m.Gender, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Gender, null, new { @class = "text-danger" })
</div>


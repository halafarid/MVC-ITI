@model Employee

@{
    ViewBag.Title = "Form";
}

<h1>Application Form</h1>

<form method="post">
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "name" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "email", @type = "email" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Salary)
        @Html.TextBoxFor(m => m.Salary, new { @class = "form-control", @id = "salary", @type = "number" })
        @Html.ValidationMessageFor(m => m.Salary)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @id = "address", @rows = "3" })
        @Html.ValidationMessageFor(m => m.Address)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Gender)
        @Html.EnumDropDownListFor(m => m.Gender, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Gender)
    </div>

    <button type="submit" class="btn btn-primary mb-2">Submit</button>
</form>

@section Styles {
    <style>
        h1 {
            margin-bottom: 20px;
        }

        form {
            width: 60%;
        }
    </style>
}